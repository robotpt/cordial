<launch>

    <arg name="web_directory_path" value="$(find cordial_face)/web"/>
    <arg name="port" default="8080"/>
    <arg name="is_launch_websocket" default="true"/>
    <rosparam file="$(find cordial_face)/../topic_parameters/topic_parameters.yaml" />

    <node pkg="cordial_tools" type="http_server_runner.py" name="face_http_server" output="screen"
        args="$(arg web_directory_path) $(arg port)" />

    <group if="$(arg is_launch_websocket)">
        <include file="$(find rosbridge_server)/launch/rosbridge_websocket.launch" />
    </group>

</launch>
